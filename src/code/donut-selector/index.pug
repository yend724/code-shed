extends /pug-modules/layouts/code
block vars
  - path = "/code/donut-selector/"
  - pageTitle = "ドーナツセレクタ"
block example
  .exmaple-area
    p articleの外
    article
      h2 article &gt; h2
      h2
        p article &gt; h2 &gt; p
      h2
        div
          p article &gt; h2 &gt; div &gt; p
      p article &gt; p
      div
        p article &gt; div &gt; p
block code-html
  details.code
    summary HTML
    div
      pre
        code.language-html
          | &lt;p&gt;articleの外&lt;/p&gt;
          | &lt;article&gt;
          |   &lt;h2&gt;article &gt; h2&lt;/h2&gt;
          |   &lt;h2&gt;&lt;p&gt;article &gt; h2 &gt; p&lt;/p&gt;&lt;/h2&gt;
          |   &lt;h2&gt;
          |     &lt;div&gt;
          |       &lt;p&gt;article &gt; h2 &gt; div &gt; p&lt;/p&gt;
          |     &lt;/div&gt;
          |   &lt;/h2&gt;
          |   &lt;p&gt;article &gt; p&lt;/p&gt;
          |   &lt;div&gt;&lt;p&gt;article &gt; div &gt; p&lt;/p&gt;&lt;/div&gt;
          | &lt;/article&gt;
block code-css
  details.code
    summary CSS
    div
      pre
        code.language-css
          | article p:not(h2 > *) {
          |   background-color: skyblue;
          | }
          | article p:not(h2 *) {
          |   background-color: grey;
          | }