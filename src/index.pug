doctype html
html(lang="ja")
  head
    include /pug-modules/includes/head.pug
  body#top
    .wrapper
      .bg
        canvas#bgCanvas
      .content
        header.header
          h1.site-title.js-slide-anime
            span.text #{siteName}
          div.sns-icons.__top
            a.fa-brands.fa-twitter.sns-icon(href="https://twitter.com/yend724" target="_blank" rel="noopener noreferrer")
            a.fa-brands.fa-github.sns-icon(href="https://github.com/yend724/code-shed" target="_blank" rel="noopener noreferrer")
        main.main.__top
          p.description #{meta.description}
          ul.link-list
            each page in pages
              if page.category === "code"
                li.link-item
                  a.link(href=page.path) #{page.pageTitle}
    script(src="/assets/js/common.ts" type="module")
    script(src="/assets/js/index.ts" type="module")
