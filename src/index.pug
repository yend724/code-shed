-
  const codePages = [{
    title: "ドーナツセレクタ",
    href: "/code/donut-selector/"
  },
  {
    title: "Three.jsのRaycasterで交差をしらべる",
    href: "/code/threejs-raycaster/"
  }]
  const siteName = "Code Shed"
  const description = "フロントエンドエンジニアのコード置き場"
  const type = "website"
  const path = "/"
  const title ="Code Shed"
doctype html
html(lang="ja")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{title}
    include /pug-modules/includes/head.pug
  body
    .wrapper
      .bg
        canvas#bgCanvas
      .content
        header.header
          h1.site-title.js-slide-anime
            span.text #{siteName}
        main.main.__top
          p.description フロントエンドエンジニアのコード置き場
          ul.link-list
            each page in codePages
              li.link-item
                a.link(href=page.href) #{page.title}
    script(src="/assets/js/common.ts" type="module")
    script(src="/assets/js/index.ts" type="module")
