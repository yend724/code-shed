include /pug-modules/mixins/code
doctype html
html(lang="ja")
  head
    include /pug-modules/includes/head.pug
  body
    #code-info.l-layout
      button.button-menu-trigger(aria-expanded="false" aria-controls="menu" aria-label="メニューを開く" data-menu-trigger="menu")
        - for(let i = 0; i < 9; i++)
          span.button-menu-trigger__dot
      #menu.l-wrapper(aria-hidden="true")
        .l-content
          header.l-header
            div.sns-icons
              a.fa-brands.fa-twitter.sns-icons__item(href="https://twitter.com/yend724" target="_blank" rel="noopener noreferrer")
              a.fa-brands.fa-github.sns-icons__item(href="https://github.com/yend724/code-shed" target="_blank" rel="noopener noreferrer")
          main.l-main
            h1.page-title #{current.pageTitle}
            .code-area
              block code-html
              block code-css
              block code-ts
            .to-top
              a.to-top__link(href="/") Topへもどる
    #code-example.l-layout
      block example
    block scripts
      script(src="/assets/js/code.ts" type="module")
      script(src="./script.ts" type="module")
