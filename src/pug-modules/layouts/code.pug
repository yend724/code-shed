include /pug-modules/mixins/code
include /pug-modules/mixins/example
doctype html
html(lang="ja")
  head
    include /pug-modules/includes/head.pug
  body
    .wrapper
      .content
        header.header
          div.site-title
            a(href="/") #{siteName}
          div.sns-icons
            a.fa-brands.fa-twitter.sns-icon(href="https://twitter.com/yend724" target="_blank" rel="noopener noreferrer")
            a.fa-brands.fa-github.sns-icon(href="https://github.com/yend724/code-shed" target="_blank" rel="noopener noreferrer")
        main.main
          h1.page-title #{current.pageTitle}
          block example
            +example()
          .code-area
            block code-html
            block code-css
            block code-ts
    block scripts
      script(src="/assets/js/common.ts" type="module")
