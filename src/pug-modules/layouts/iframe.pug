doctype html
html(lang="ja")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="robots" content="noindex")
    title iframe
    script.
      const openInChild = (n) => {
        if (n == 0 && top.location.href == self.location.href){
            top.location.href='/';
        }
        n++;
      }
      window.addEventListener("DOMContentLoaded", openInChild)
  body(onLoad="openInChild(0)")
    block content
    block scripts
      script(src="/assets/js/iframe.ts" type="module")
      script(src="./script.ts" type="module")
