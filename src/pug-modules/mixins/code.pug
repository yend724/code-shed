mixin code(extension, text)
  - var title = ""
  - var lang = ""
  case extension
    when "html"
      - var title = "HTML"
      - var lang = "html"
    when "pug"
      - var title = "Pug"
      - var lang = "pug"
    when "css"
      - var title = "CSS"
      - var lang = "css"
    when "scss"
      - var title = "SCSS"
      - var lang = "scss"
    when "js"
      - var title = "JavaScript"
      - var lang = "js"
    when "ts"
      - var title = "TypeScript"
      - var lang = "ts"
    default
      - var title = "言語がありません"
      - var lang = "言語がありません"
  details.code
    summary.code-title
      span.code-title__text(data-text=title) #{title}
    div.code-content
      if lang == "html"
        pre
          code(class="language-" + lang)
            block
      else
        pre
          code(class="language-" + lang) #{text}


